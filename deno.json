{
  "tasks": {
    "check": "deno cache --check=all main.ts",
    "flint": "deno fmt && deno lint",
    "start": "deno run --unstable -A --watch=static/ main.ts",
    "refresh": "deno cache --reload main.ts"
  },
  "lock": false,
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"],
      "exclude": ["no-unused-vars"]
    }
  },
  "fmt": {
    "options": {
      "useTabs": true,
      "lineWidth": 80,
      "indentWidth": 4,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  }
}
